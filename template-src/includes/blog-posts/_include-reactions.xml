<b:if cond='data:top.showReactions'>
  <div class='media'>
    <div class='media-left' style='vertical-align: middle;'>
      <span><data:top.reactionsLabel/></span>
    </div>
    <div class='media-body'>
      <iframe expr:src='data:post.reactionsUrl' name='reactions' style='position: relative; width: 100%; height: 22px; border: 0;'/>
    </div>
  </div>
</b:if>